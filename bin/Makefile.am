DISTCHECK_CONFIGURE_FLAGS = \
    --enable-debug \
    --enable-devel \
    --enable-service \
    --enable-compile-warnings=maximum

SOFTGRED_CFLAGS = -DSOFTGRED_CONFDIR=\"$(confdir)\" \
                  -DSOFTGRED_LOGDIR=\"$(logdir)\"   \
                  -DSOFTGRED_PIDDIR=\"$(piddir)\" 

sbin_PROGRAMS = softgred

if SOFTGRED_SERVICE
SOFTGRED_SERVICE_FILES =      \
    ../src/service.c          \
    ../src/service.h          \
    ../src/service_cmd.c      \
    ../src/service_cmd.h
SOFTGRED_SERVICE_CFLAGS = -DSOFTGRED_ENABLE_SERVICE
endif

softgred_SOURCES =            \
    ../src/softgred.c         \
    ../src/softgred.h         \
    ../src/softgred_config.c  \
    ../src/softgred_config.h  \
    ../src/helper.c           \
    ../src/helper.h           \
    ../src/log.c              \
    ../src/log.h              \
    ../src/payload.c          \
    ../src/payload.h          \
    ../src/iface_bridge.c     \
    ../src/iface_bridge.h     \
    ../src/iface_vlan.c       \
    ../src/iface_vlan.h       \
    ../src/iface_ebtables.h   \
    ../src/iface_ebtables.c   \
    ../src/iface_gre.c        \
    ../src/iface_gre.h        \
    ../src/provision.c        \
    ../src/provision.h        \
    $(SOFTGRED_SERVICE_FILES)

softgred_CFLAGS =              \
    $(CFLAGS)                  \
    -I$(top_srcdir)            \
    -I$(top_srcdir)/src        \
    -I$(top_srcdir)/include    \
    $(WARN_CFLAGS)             \
    $(SOFTGRED_CFLAGS)         \
    $(SOFTGRED_SERVICE_CFLAGS)

softgred_LDFLAGS = $(AM_LIBS) $(LDFLAGS)

softgred_LDADD = $(AM_LIBS) $(LDFLAGS)
